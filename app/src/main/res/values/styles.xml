<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground"> @color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/weighticon</item>
    </style>


    <style name="Rose" parent="AppTheme" >
        <item name="colorPrimary">@color/colorPrimary_Rose</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Rose</item>
        <item name="colorAccent">@color/colorAccent_Rose</item>
        <item name="android:windowBackground">@color/colorPrimaryDark_Rose</item>
        <item name="android:colorBackground">@color/colorAccent_Rose</item>

    </style>


    <style name="Fonz" parent="AppTheme" >
        <item name="colorPrimary">@color/colorPrimary_Fonz</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Fonz</item>
        <item name="colorAccent">@color/colorAccent_Fonz</item>
    </style>


</resources>
