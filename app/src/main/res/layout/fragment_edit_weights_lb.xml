<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.travisb.android.simpleplatecalculator.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editbarweight_txtview"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor = "@android:color/white"
                    android:textSize="20sp"
                    android:text="@string/barWeight" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editBarWeight_editTxt"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textColor = "@android:color/white"
                        android:textAlignment="center"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor = "@android:color/white"
                        android:paddingBottom="8dp"
                        android:textSize="10sp"
                        android:text="lbs"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit45txtview"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor = "@android:color/white"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Available 45 lb plates" />

            <EditText
                android:id="@+id/edit_weights45"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor = "@android:color/white"
                android:layout_weight="3"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit35txtview"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor = "@android:color/white"
                android:textSize="20sp"
                android:text="Available 35 lb plates" />

            <EditText
                android:id="@+id/edit_weights35"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="3"
                android:textColor = "@android:color/white"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit25txtview"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor = "@android:color/white"
                android:textSize="20sp"
                android:text="Available 25 lb plates" />

            <EditText
                android:id="@+id/edit_weights25"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="3"
                android:textColor = "@android:color/white"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit10txtview"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor = "@android:color/white"
                android:textSize="20sp"
                android:text="Available 10 lb plates" />

            <EditText
                android:id="@+id/edit_weights10"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="3"
                android:textColor = "@android:color/white"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit5txtview"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor = "@android:color/white"
                android:textSize="20sp"
                android:text="Available 5 lb plates" />

            <EditText
                android:id="@+id/edit_weights5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="3"
                android:textColor = "@android:color/white"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit2pnt5txtview"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor = "@android:color/white"
                android:textSize="20sp"
                android:text="Available 2.5 lb plates" />

            <EditText
                android:id="@+id/edit_weights2pnt5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="3"
                android:textColor = "@android:color/white"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>
        <Button
            android:id="@+id/saveWeights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/close" />
    </LinearLayout>
</FrameLayout>
